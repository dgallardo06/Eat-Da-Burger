<div class="container">
	<div class="row">
		<div>
			<h1>EAT DA BURGER!</h1>
		</div>
		<div>
			<div class="row">
				{{#each burger_data}}
					{{#unless this.devoured}}
				<div>
					<pre>
						{{this.id}}. {{this.burger_name}}
					</pre>
				</div>
				<div>
					<form action="/burgers/update?_method=PUT">
						<input type="text" name="burger_id" value={{this.id}}>
						<button type="submit" class="btn btn-default">DEVOUR IT!</button>
					</form>
					
				</div>
				{{/unless}}
				{{/each}}
			</div>
		</div>

		<div class="task">
			{{#each burger_data}}
				{{#if this.devoured}}
					<input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
				{{/if}}
			{{/each}}
		</div>
	</div>
</div>

<div class="container">
	<div class="row">
		<div>
			<form action="/burgers/create" method="POST">
				<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
				<button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
			</form>
			<p>Enter any burger you desire!</p>
		</div>
	</div>
</div>